{
  "name": "@yourssu/monorepo-packages",
  "packageManager": "pnpm@8.15.4",
  "private": false,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "prepublishOnly": "npm run build",
    "preview": "vite preview",
    "design-system": "pnpm --filter @yourssu/design-system-react",
    "logging-system": "pnpm --filter @yourssu/logging-system-react",
    "utils": "pnpm --filter @yourssu/utils",
    "lint-config": "pnpm --filter @yourssu/lint-config"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.13",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.3",
    "vite-tsconfig-paths": "^4.2.0",
    "xmldom": "^0.6.0"
  }
}
